{
  "name": "api_rest",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/rust/api-rest/src",
  "targets": {
    "build": {
      "executor": "@nxrs/cargo:build",
      "options": {
        "release": false
      },
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "serve": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": [],
      "options": {
        "command": "cargo watch -x run",
        "cwd": "apps/rust/api-rest/"
      }
    },
    "test": {
      "executor": "@nxrs/cargo:test",
      "options": {}
    },
    "lint": {
      "executor": "@nxrs/cargo:clippy",
      "options": {
        "fix": false,
        "failOnWarnings": true,
        "noDeps": true
      }
    },
    "dockers": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        }
      ],
      "options": {
        "push": true,
        "file": "./Dockerfile",
        "target": "rust",
        "platforms": ["linux/amd64", "linux/arm64"],
        "build-args": ["DIST_PATH=target/release/api_rest"],
        "metadata": {
          "images": [
            "yurikrupnik/rust-api-rest"
          ]
        }
      }
    },
    "docker-buildx": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": [],
      "options": {
        "command": "docker buildx build --target rust --build-arg DIST_PATH=target/release/api_rest . -t yurikrupnik/rust-api-rest"
      }
    },
    "docker-normal": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": [],
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        }
      ],
      "options": {
        "parallel": false,
        "commands": [
          "docker build --target rust --build-arg DIST_PATH=target/release/api_rest . -t yurikrupnik/rust-api-rest",
          "docker push yurikrupnik/rust-api-rest"
        ]
      }
    }
  },
  "tags": []
}
